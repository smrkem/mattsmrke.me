<div class="modal fade" id="messageMeModal" tabindex="-1" role="dialog" aria-labelledby="messageMeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="messageMeModalLabel">Message Me</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea rows="4" id="message-me-body" placeholder="Your message ..."></textarea>
      </div>
      <div class="modal-footer">
        <button id="message-me-send" type="button" class="btn btn-primary">Send</button>
      </div>
    </div>
  </div>
</div>
